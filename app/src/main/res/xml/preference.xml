<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference android:title="Notification of old collections"
        android:key="collections_max_sleep"
        android:defaultValue="10"/>

    <PreferenceCategory android:title="Hours before re-ask">

        <EditTextPreference android:title="Hard Difficulty"
            android:key="hardsleeptime"
            android:defaultValue="24"/>
        <EditTextPreference android:title="Medium Difficulty"
            android:key="mediumsleeptime"
            android:defaultValue="48"/>
        <EditTextPreference android:title="Easy Difficulty"
            android:key="easysleeptime"
            android:defaultValue="72"/>
        <EditTextPreference android:title="Trivial Difficulty"
            android:key="trivialsleeptime"
            android:summary="Never re-ask by default"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Maximum minutes for a question">

        <EditTextPreference android:title="Hard Difficulty"
            android:key="hard_minutes"
            android:defaultValue="5"/>
        <EditTextPreference android:title="Medium Difficulty"
            android:key="medium_minutes"
            android:defaultValue="3"/>
        <EditTextPreference android:title="Easy Difficulty"
            android:key="easy_minutes"
            android:defaultValue="2"/>
        <EditTextPreference android:title="Trivial Difficulty"
            android:key="trivial_minutes"
            android:enabled="false"
            android:summary="Disable if never re-ask"
            android:defaultValue="1"/>

    </PreferenceCategory>

</PreferenceScreen>
