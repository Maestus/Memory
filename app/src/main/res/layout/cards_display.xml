<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:baselineAligned="false"
                android:layout_marginBottom="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="93sp"
                    android:id="@+id/question"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <View
                    android:layout_height="3dp"
                    android:layout_width="fill_parent"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/separator"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:layout_weight="63.67" />
            </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:id="@+id/difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/trivial"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Triviale"
            android:onClick="set_trivial" />

        <Button
            android:id="@+id/easy"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Easy"
            android:onClick="easy" />

        <Button
            android:id="@+id/give_answer"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonStyleSmall"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Answer"
            android:onClick="answer" />

        <Button
            android:id="@+id/medium"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Medium"
            android:onClick="medium" />

        <Button
            android:id="@+id/hard"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Hard"
            android:onClick="hard" />

    </LinearLayout>
</RelativeLayout>
