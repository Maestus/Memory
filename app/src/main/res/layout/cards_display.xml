<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Chronometer
        android:id="@+id/chronometer1"
        android:textColor="#4169E1"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:baselineAligned="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="93sp"
                    android:id="@+id/question"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <View
                    android:layout_height="3dp"
                    android:layout_width="fill_parent"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:id="@+id/separator"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/answer"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:layout_weight="63.67" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/difficulty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:foregroundGravity="bottom"
                android:layout_gravity="bottom"
                android:layout_weight="1.80">

                <Button
                    android:id="@+id/trivial"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:text="Triviale"
                    android:onClick="trivial" />

                <Button
                    android:id="@+id/easy"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:text="Easy"
                    android:onClick="easy" />

                <Button
                    android:id="@+id/give_answer"
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:text="Answer"
                    android:onClick="answer" />
                <Button
                    android:id="@+id/medium"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:text="Medium"
                    android:onClick="medium" />

                <Button
                    android:id="@+id/hard"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:text="Hard"
                    android:onClick="hard" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
